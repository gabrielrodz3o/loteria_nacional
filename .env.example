# Database Configuration
DATABASE_URL=postgresql://loteria_user:LoteriaPass2024!@localhost:5433/loteria_db
TEST_DATABASE_URL=postgresql://loteria_user:LoteriaPass2024!@localhost:5433/loteria_test_db

# Redis Configuration
REDIS_URL=redis://:LoteriaRedis2024!@localhost:6380/0

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
SECRET_KEY=your-secret-key-here-change-in-production

# Scraping Configuration
SELENIUM_ENABLED=true
SELENIUM_HEADLESS=true
SCRAPING_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# Machine Learning Configuration
MODEL_CACHE_DAYS=7
HISTORICAL_WINDOW_DAYS=365
MIN_TRAINING_SAMPLES=50
PREDICTION_BATCH_SIZE=1000

# Scheduler Configuration
ENABLE_SCHEDULER=true
SCRAPING_SCHEDULE=0 22 * * *  # Daily at 10 PM
PREDICTION_SCHEDULE=0 8 * * *  # Daily at 8 AM
CLEANUP_SCHEDULE=0 2 * * 0     # Weekly at 2 AM Sunday

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Cache Configuration
CACHE_TTL_PREDICTIONS=3600  # 1 hour
CACHE_TTL_STATISTICS=7200   # 2 hours

# Vector Configuration
EMBEDDING_DIMENSIONS=128

# Lottery Specific
MAX_PREDICTIONS_PER_GAME=3
NUMBER_RANGE_MIN=0
NUMBER_RANGE_MAX=99

# Security (for production)
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
RATE_LIMIT_ENABLED=true